# ==================================
# AI SERVICE CONFIGURATION
# ==================================
# Options: "local" or "cloud"
AI_SERVICE=local

# LOCAL AI (Ollama) - PRIMARY
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest

# LOCAL AI (LM Studio) - ALTERNATIVE
LM_STUDIO_BASE_URL=http://localhost:1234

# CLOUD AI SERVICES (Optional Fallback)
# Uncomment if you want cloud backup when local fails
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# CLOUD_AI_MODEL=gpt-4

# ==================================
# VOICE SERVICES
# ==================================
# Options: "browser", "elevenlabs", "google"
TTS_SERVICE=browser
STT_SERVICE=browser

# If using cloud TTS/STT (optional)
# ELEVENLABS_API_KEY=your_elevenlabs_key
# GOOGLE_CLOUD_API_KEY=your_google_key

# ==================================
# APPLICATION SETTINGS
# ==================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Cosmic Characters
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=2000
NEXT_PUBLIC_RATE_LIMIT_PER_MINUTE=60

# Streaming settings
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_STREAM_CHUNK_SIZE=10

# ==================================
# ANALYTICS (Optional)
# ==================================
# NEXT_PUBLIC_ANALYTICS_ID=
# NEXT_PUBLIC_GA_TRACKING_ID=